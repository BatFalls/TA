	hide flare1;
	hide flare2;
	hide flare3;
	hide flare4;
	Static_Var_1 = 0;
	Static_Var_2 = 0;
	Static_Var_3 = 1;
	Static_Var_4 = 0;
	Static_Var_5 = 0;
	start-script MotionControl();
	start-script SmokeUnit();
}

