Killed(severity, corpsetype)
{
	hide flare1;
	hide flare2;
	if( severity <= 25 )
	{
		corpsetype = 1;
		explode base type 128;
		explode sleeve type 128;
		explode lfoot type 128;
		explode barrel1 type 128;
		explode lleg type 128;
		explode lthigh type 128;
		explode pelvis type 128;
		explode rfoot type 128;
		explode barrel2 type 128;
		explode rleg type 128;
		explode rthigh type 128;
		explode torso type 128;
		return (corpsetype);
	}
	if( severity <= 50 )
	{
		corpsetype = 2;
		explode base type 128 | FALL;
		explode torso type 128 | SHATTER;
		explode lfoot type 128 | FALL;
		explode barrel1 type 128 | FALL;
		explode lleg type 128 | FALL;
		explode lthigh type 128 | FALL;
		explode pelvis type 128 | FALL;
		explode rfoot type 128 | FALL;
		explode barrel2 type 128 | FALL;
		explode rleg type 128 | FALL;
		explode rthigh type 128 | FALL;
		return (corpsetype);
	}
	corpsetype = 3;
	explode base type 128 | FALL | SMOKE | FIRE | EXPLODE_ON_HIT;
	explode torso type 128 | SHATTER | EXPLODE_ON_HIT;
	explode lfoot type 128 | FALL | SMOKE | FIRE | EXPLODE_ON_HIT;
	explode barrel1 type 128 | FALL | SMOKE | FIRE | EXPLODE_ON_HIT;
	explode lleg type 128 | FALL | SMOKE | FIRE | EXPLODE_ON_HIT;
	explode lthigh type 128 | FALL | SMOKE | FIRE | EXPLODE_ON_HIT;
	explode pelvis type 128 | FALL | SMOKE | FIRE | EXPLODE_ON_HIT;
	explode rfoot type 128 | FALL | SMOKE | FIRE | EXPLODE_ON_HIT;
	explode barrel2 type 128 | FALL | SMOKE | FIRE | EXPLODE_ON_HIT;
	explode rleg type 128 | FALL | SMOKE | FIRE | EXPLODE_ON_HIT;
	explode rthigh type 128 | FALL | SMOKE | FIRE | EXPLODE_ON_HIT;
	explode sleeve type 128;
	return (corpsetype);
}
