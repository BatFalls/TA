#define TA			// This is a TA script

#include "sfxtype.h"
#include "exptype.h"

piece  base, body, underturret1, underturret2, sleeve1, sleeve2, barrel2, barrel1,
       flare2, flare1;

static-var  restore_delay, Static_Var_2;

// Signal definitions
#define SIG_AIM				2
#define SIG_AIM_2			4


SmokeUnit(healthpercent, sleeptime, smoketype)
{
	while( get BUILD_PERCENT_LEFT )
	{
		sleep 400;
	}
	while( TRUE )
	{
		healthpercent = get HEALTH;
		if( healthpercent < 66 )
		{
			smoketype = 256 | 2;
			if( Rand( 1, 66 ) < healthpercent )
			{
				smoketype = 256 | 1;
			}
			emit-sfx smoketype from base;
		}
		sleeptime = healthpercent * 50;
		if( sleeptime < 200 )
		{
			sleeptime = 200;
		}
		sleep sleeptime;
	}
}

Create()
{
	hide flare1;
	hide flare2;
	start-script SmokeUnit();
}

RestoreAfterDelay1()
{
	sleep 3000;
	turn underturret1 to y-axis <0.000000> speed <50.000000>;
	turn sleeve1 to x-axis <0.000000> speed <50.000000>;
}

RestoreAfterDelay2()
{
	sleep 3000;
	turn underturret2 to y-axis <0.000000> speed <50.000000>;
	turn sleeve2 to x-axis <0.000000> speed <50.000000>;
}


AimPrimary(heading, pitch)
{
	signal SIG_AIM;
	set-signal-mask SIG_AIM;
	turn underturret1 to y-axis heading speed <50.000000>;
	turn sleeve1 to x-axis <1.000000> - pitch speed <50.000000>;
	wait-for-turn underturret1 around y-axis;
	wait-for-turn sleeve1 around x-axis;
	start-script RestoreAfterDelay1();
	return (1);
}

FirePrimary()
{
	emit-sfx 1024 + 0 from flare1;
}

AimFromPrimary(piecenum)
{
	piecenum = underturret1;
}

QueryPrimary(piecenum)
{
	piecenum = flare1;
}

AimSecondary(heading, pitch)
{
	signal SIG_AIM_2;
	set-signal-mask SIG_AIM_2;
	turn underturret2 to y-axis heading speed <50.000000>;
	turn sleeve2 to x-axis <1.000000> - pitch speed <50.000000>;
	wait-for-turn underturret2 around y-axis;
	wait-for-turn sleeve2 around x-axis;
	start-script RestoreAfterDelay2();
	return (1);
}

FireSecondary()
{
	emit-sfx 1024 + 0 from flare2;
}

AimFromSecondary(piecenum)
{
	piecenum = underturret2;
}

QuerySecondary(piecenum)
{
	piecenum = flare2;
}

SweetSpot(piecenum)
{
	piecenum = body;
}

Killed(severity, corpsetype)
{

	if( severity <= 25 )
	{
		corpsetype = 1;
		explode underturret1 type NOHEATCLOUD;
		explode underturret2 type NOHEATCLOUD;
		explode sleeve1 type NOHEATCLOUD;
		explode sleeve2 type NOHEATCLOUD;
		explode barrel1 type NOHEATCLOUD;
		explode barrel2 type NOHEATCLOUD;
		explode body type NOHEATCLOUD;		
		return (corpsetype);
	}
	if( severity <= 50 )
	{
		corpsetype = 2;
		explode underturret1 type NOHEATCLOUD | FALL;
		explode underturret2 type NOHEATCLOUD | FALL;
		explode sleeve1 type NOHEATCLOUD | FALL;
		explode sleeve2 type NOHEATCLOUD | FALL;
		explode barrel1 type NOHEATCLOUD | FALL;
		explode barrel2 type NOHEATCLOUD | FALL;
		explode body type NOHEATCLOUD;		
		return (corpsetype);
	}
	corpsetype = 3;
	explode underturret1 type NOHEATCLOUD | FALL | SHATTER | EXPLODE_ON_HIT;
	explode underturret2 type NOHEATCLOUD | FALL | SHATTER | EXPLODE_ON_HIT;
	explode sleeve1 type NOHEATCLOUD | FALL | SHATTER | EXPLODE_ON_HIT;
	explode sleeve2 type NOHEATCLOUD | FALL | SHATTER | EXPLODE_ON_HIT;
	explode barrel1 type NOHEATCLOUD | FALL | SHATTER | EXPLODE_ON_HIT;
	explode barrel2 type NOHEATCLOUD | FALL | SHATTER | EXPLODE_ON_HIT;
	explode body type NOHEATCLOUD | SHATTER | EXPLODE_ON_HIT;	
	return (corpsetype);


}
