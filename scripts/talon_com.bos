TeleportControl()
{
	sleep 100;
	emit-sfx 1025 from teleport;
	sleep 2200;
	emit-sfx 1025 from pelvis;
	sleep 100;
	while( Static_Var_22 < 23 )
	{
		emit-sfx 2051 from teleport;
		sleep 65;
		++Static_Var_22;
	}
	sleep 1000;
	move teleport to y-axis [0.] now;
}

