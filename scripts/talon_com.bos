UnitSpeed()
{
	while( TRUE )
	{
		Static_Var_mouvement = get CURRENT_SPEED * 100 / Static_Var_10;
		if( Static_Var_mouvement < 20 )
		{
			Static_Var_mouvement = 20;
		}
		sleep 142;
	}
}


